<%= render '/shared/messagenavigationbar', pathname: "#{@chatroom.name.first(16).downcase}.." %>
<div class="content-long-dashboard dashboard">
<!--  conteneur -->

<div id="messages" data-chatroom-id="<%= @chatroom.id %>">
  <% @chatroom.messages.each do |message| %>
    <div class="message-container" id="message-<%= message.id %>">
  <i class="author">
    <span><%= message.user.first_name %></span>
    <small><%= message.created_at.strftime("%a %b %e at %l:%M%p") %></small>
  </i>
  <p><%= message.content %></p>
</div>
  <% end %>
</div>
<%# <%= raise %>


<!-- Input Formulaire -->
<span class="input-chatroom-div">
<%= simple_form_for [ @chatroom, @message ], remote: true do |f| %>
  <%= f.input_field :content, label: false, placeholder: "Aa" %>
  <%= f.submit "envoyer " %>
<% end %>
</span>

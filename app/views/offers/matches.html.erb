<div class="content-offers offers">
  <% if @offers.count.positive? %>
    <h2 class="mt-3">Mes matches</h2>
    <% @offers.each do |offer| %>
      <%= link_to offer_path(offer), class: "message-card pill-lavande" do %>
        <div class="max-length text-center">
          <h4><%= offer.title.capitalize %></h4>
          <p><%= offer.company_name.capitalize %></p>
          <p><%= offer.user.first_name.capitalize %> <%= offer.user.last_name.capitalize %></p>
        </div>
        <% end %>
      <% end %>
  <% else %>
    <p class="dashboard-info-pill dash-grey mt-3">Vous n'avez aucun match pour le moment...</p>
  <% end %>
</div>

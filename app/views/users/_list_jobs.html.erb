<div data-hello-target="liste">

  <% if params[:query].blank? %>
    <h4>Choisir un m√©tier</h4>
  <% else %>
    <h5><%= pluralize @jobs.count, 'resultats' %> pour <code><%= params[:query] %> </code></h5>
  <% end %>

 <% @jobs.each do |job| %>
      <%= simple_form_for @job, url: job_update_test_path, method: :post do |f| %>
      <%= f.label job.name, class: "job-name", data: {job: job.id} %>
      <div class="job-form-<%= job.id %> d-none">
          <%= f.input :experience, placeholder: "Votre experience en mois" %>
          <%= hidden_field_tag :job_id, value: job.id %>
          <%= f.submit "Ajouter" %>
      </div>
<% end %>
<% end %>
</div>
